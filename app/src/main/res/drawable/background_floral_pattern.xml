<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5" /> <!-- Light gray background -->
        </shape>
    </item>
    <!-- Subtle pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" /> <!-- Semi-transparent white overlay -->
            <stroke
                android:width="1dp"
                android:color="#20D3D3D3" /> <!-- Subtle border -->
        </shape>
    </item>
</layer-list>